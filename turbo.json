{
  "$schema": "https://turbo.build/schema.v2.json",
  "globalEnv": ["NODE_ENV"],
  "globalDependencies": ["**/.env.*local"],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "cache": true
    },
    "format": {
      "cache": false
    },
    "prettier": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
